<% if @my_items.empty? %>
  <div class="chat-container d-flex flex-column justify-content-center align-items-center mt-5">
    <h2 class="center">No Items yet listed</h2>
    <%= link_to "Add an Item!", new_item_path, class: "btn btn-primary save-btn my-1" %>
  </div>
<% else %>
  <div class="chat-container">
    <%= link_to "Add an Item!", new_item_path, class: "btn btn-primary save-btn my-2 mx-auto d-block" %>
    <% @my_items.each do |item| %>
        <div class="my-1">
          <div class="card-product">
            <img class="product-img" src="<%= cl_image_path item.photos[0].key %>">
            <div class="card-product-infos">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h2><%= link_to item.title, item_path(item), class: "white" %></h2>
                  <p><%= item.description %></p>
                  <% item.price.to_i.times do  %>
                    <span class="euro"><i class="fas fa-euro-sign"></i></span>
                  <% end %>
                </div>
                <div class= "d-flex justify-content-center align-items-center flex-column">
                    <%= link_to "<i class='fas fa-pencil-alt'></i>".html_safe, edit_item_path(item), class: "btn btn-primary navbar-btn mb-2" %>
                    <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, item_path(item), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn-primary btn navbar-btn" %>
                </div>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
<% end %>
