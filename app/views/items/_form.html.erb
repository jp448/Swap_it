<div class="container">
  <%= simple_form_for @item, html: { class: "login-form"} do |f|%>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.association :tags,
                  as: :check_boxes,
                  input_html: { class: "tag-selector" },
                  item_wrapper_class: 'tag-item',
                  collection: Tag.all %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "submit", class: "btn btn-primary" %>
  <% end %>
</div>
