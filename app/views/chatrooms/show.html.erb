<div class="chatroom">
  <h1><span class="blue">Message</span> <%= @chatroom.item.user.username %></h1>

  <div>
    <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
      <% @chatroom.messages.each do |message| %>
        <%= render "messages/message", message: message %>
      <% end %>
    </div>

    <%= simple_form_for [ @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Message #{@chatroom.item.user.username}" %>
    <% end %>
  </div>
</div>
